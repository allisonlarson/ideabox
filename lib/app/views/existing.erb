<div class= 'container'>
  <div class='row'>
    <div class='col-xs-12'>

  <div class ='hidden-xs nav ideas'><h1><a href= '/'>IdeaBox</a>  <a href='/idea'>NewIdea</a>  <a href='/existing'>All</a></div>
    <div class ='visible-xs-block small_nav ideas'><h1><a href= '/'>IdeaBox</a>  <a href='/idea'>NewIdea</a>  <a href='/existing'>All</a></div>
    <br/><br/>
  </div>
  </div>
  <div class='row ideas'>
      <% ideas.each do |idea| %>
      <div class='col-lg-12'>
      <div class="existing_ideas" style="background-image: url('/uploads/<%=idea.images%>');">
        <span>
          <b><%= idea.title %><span class='spacer'></span></b><br/>
          <%= idea.description %><span class='spacer'></span><br/><br/>
        </span><form action='/<%= idea.id %>/like' method='POST' style="display: inline">
            <input type='submit' value="^"/>
          </form>
          <form action='/<%= idea.id %>/dislike' method='POST' style="display: inline">
              <input type='submit' value="v"/>
            </form>
          <span class='tags'>
          <% idea.tags.each do |tag| %>
          <a href="/<%= tag %>"><%= tag %></a>
          <% end %><br/></span></span>
          <form action='/<%= idea.id %>/details' method='GET'>
            <input type='submit' value='more' />
          </form>
          <form action='/<%= idea.id %>/edit' method='GET'>
            <input type='submit' value='edit' />
          </form>
          <form action='/<%= idea.id %>' method='POST'>
            <input type="hidden" name="_method" value="DELETE">
            <input type='submit' value="delete"/>
          </form><br/><br/>
        </div>
      </div>
      <% end %>
    </div>
  </div>
