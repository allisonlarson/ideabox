<div class= 'container'>
  <div class='row'>
    <div class='col-xs-12'>

      <div class ='hidden-xs nav'><h1><a href= '/'>IdeaBox</a>  <a href='/idea'>NewIdea</a>  <a href='/existing'>All</a></div>
      <div class ='visible-xs-block small_nav'><h1><a href= '/'>IdeaBox</a>  <a href='/idea'>NewIdea</a>  <a href='/existing'>All</a></div>
    <br/><br/>
  </div>
  </div>

<p>
<div class='row ideas'>
  <h1><b>Ideas tagged with <%= tag %></b></h1>
    <% ideas.each do |idea| %>
    <div class='col-lg-12'>
    <div class="existing_ideas" style="background-image: url('/uploads/<%=idea.images%>');">
      <span>
        <b><%= idea.title %><span class='spacer'></span></b><br/>
        <%= idea.description %><span class='spacer'></span><br/><br/>
      </span><form action='/<%= idea.id %>/details' method='GET' style="display: inline">
        <input type='submit' value="+"/>
      </form>
      <span class='tags'>
      <% idea.tags.each do |tag| %>
      <a href="/<%= tag %>"><%= tag %></a>
      <% end %><br/></span>
  </div>
</div>
<% end %>
  <form action='/' method='GET'>
    <input type='submit' value='IdeaBox' />
  </form>
</p>
</div>
